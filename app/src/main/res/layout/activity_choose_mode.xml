<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chord"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="msc_aueb_gr_pol_liosis.mobychord.ChooseMode">

    <Button
        android:text="Make a Request"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/makeRequestButton"
        android:layout_above="@+id/makeNodeButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp" />

    <Button
        android:text="Make me a Node"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/makeNodeButton"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/makeRequestButton"
        android:layout_alignEnd="@+id/makeRequestButton" />


</RelativeLayout>
