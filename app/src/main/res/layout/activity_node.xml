<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_node"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chord_network"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="gr.aueb.cs.grad.mobychord.Node">

    <TextView
        android:id="@+id/myIdTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myIdTV"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Connected to Ring"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/myIpTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myIdTV"
        android:layout_marginTop="47dp"
        android:layout_toEndOf="@+id/myIdTV"
        android:layout_toRightOf="@+id/myIdTV" />

    <EditText
        android:id="@+id/logArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/disconnectButton"
        android:layout_below="@+id/myIpTV"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/keysButton"
        android:layout_toLeftOf="@+id/keysButton"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="textMultiLine"
        android:selectAllOnFocus="false"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/keysButton"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/logArea"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="keys" />

    <Button
        android:id="@+id/fingertableButton"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/keysButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="fTable" />

    <Button
        android:id="@+id/crdButton"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fingertableButton"
        android:layout_alignStart="@+id/fingertableButton"
        android:layout_alignLeft="@+id/fingertableButton"
        android:text="cData" />

    <Button
        android:id="@+id/filesButton"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crdButton"
        android:layout_toEndOf="@+id/logArea"
        android:layout_toRightOf="@+id/logArea"
        android:text="Files" />

    <!--<Button-->
    <!--android:text="IPs"-->
    <!--android:layout_width="80dp"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:id="@+id/ipButton"-->
    <!--android:layout_below="@+id/filesButton"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:layout_alignParentEnd="true" />-->

    <Button
        android:id="@+id/cacheButton"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filesButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Cache" />

    <Button
        android:id="@+id/disconnectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Disconnect" />

</RelativeLayout>
